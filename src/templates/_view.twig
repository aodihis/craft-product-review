{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}
{% set title = "Review ##{review.id}" %}


{% block details %}
    <dl class="meta read-only">
        <div class="data">
            <dt class="heading">ID</dt>
            <dd class="value">{{ review.id }}</dd>
        </div>
        <div class="data">
            <dt class="heading">Reviewer</dt>
            <dd class="value"><a
                        href={{ review.reviewer.cpEditUrl }}>{{ review.reviewer.fullname ? review.reviewer.fullname : review.reviewer.username }}</a>
            </dd>
        </div>
        <div class="data">
            <dt class="heading">Product</dt>
            <dd class="value"><a href={{ review.product.cpEditUrl }}>{{ review.product.title }}</a></dd>
        </div>
        <div class="data" >
            <dt class="heading">Variants</dt>
            <dd class="value">
                <ul>
                    {% for variant in review.variants %}
                        <li><a href={{ variant.cpEditUrl }}>{{ variant.title }}</a></li>
                    {% endfor %}
                </ul>
            </dd>
        </div>

        <div class="data" >
            <dt class="heading">Created at</dt>
            <dd class="value">{{ review.dateCreated|datetime }}</dd>
        </div>
        <div class="data">
            <dt class="heading">Updated at</dt>
            <dd class="value">{{ review.dateUpdated|datetime }}</dd>
        </div>
    </dl>
{% endblock %}


{% block content %}

    <div class="field" data-attribute="comment" >
        <div class="heading">
            <label>Rating</label>
        </div>
        {% for i in 1..review.rating %}
            <span style="font-size:150%;color:#0a0d0f;">&starf;</span>
        {% endfor %}
    </div>

    <div id="comment-field" class="field" data-attribute="comment" >
        <div class="heading">
            <label id="comment-label" for="comment">Comment</label></div>
        <div class="input ltr">
            {{ review.comment ? review.comment|raw : 'No Feedback'|t('product-review') }}
        </div>
    </div>


{% endblock content %}