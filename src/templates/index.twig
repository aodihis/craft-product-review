{% extends "_layouts/cp" %}
{% set title = "Commerce Reviews" %}
{# 
{% do view.registerAssetBundle('aodihis\\productreview\\web\\assets\\reviewtable\\ReviewTableAsset') -%} #}

{% do view.registerAssetBundle('craft\\web\\assets\\admintable\\AdminTableAsset') -%}

{% block comment %}
    <div id="table-data"></div>
{% endblock %}

{% js %}
var columns = [
  { name: 'product', title: Craft.t('app', 'Product') },
  { name: 'rating', title: Craft.t('app', 'Rating') },
  { name: 'comment', title: Craft.t('app', 'comment') },
  { name: 'reviewer', title: Craft.t('app', 'Reviewer') },
];

new Craft.VueAdminTable({
    container: '#table-data',
    columns: columns,
    tableDataEndpoint: 'product-review/review-cp/get-table-data',
});
{% endjs %}